<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Xalendar.Sample.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Xalendar.Sample.Converters"
    xmlns:xal="http://xalendar.com/schemas/xaml"
    Title="CalendarView Sample">
    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:IntToBooleanConverter x:Key="IntToBooleanConverter" />

                    <Style Class="PreviousButton" TargetType="Button">
                        <Setter Property="Text" Value="◀" />
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="BackgroundColor" Value="Transparent" />
                    </Style>

                    <Style Class="MonthName" TargetType="Label">
                        <Setter Property="FlexLayout.Grow" Value="1" />
                        <Setter Property="FontSize" Value="Title" />
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="FontAttributes" Value="Bold" />
                        <Setter Property="HorizontalTextAlignment" Value="Center" />
                    </Style>

                    <Style Class="NextButton" TargetType="Button">
                        <Setter Property="Text" Value="▶" />
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="BackgroundColor" Value="Transparent" />
                    </Style>

                    <Style
                        ApplyToDerivedTypes="True"
                        Class="DayOfWeek"
                        TargetType="Label">
                        <Setter Property="TextColor" Value="#D9D6E9" />
                        <Setter Property="FontSize" Value="Small" />
                        <Setter Property="FontAttributes" Value="Bold" />
                        <Setter Property="HeightRequest" Value="56" />
                        <Setter Property="HorizontalTextAlignment" Value="Center" />
                        <Setter Property="VerticalTextAlignment" Value="Center" />
                    </Style>

                    <Style
                        ApplyToDerivedTypes="True"
                        Class="DayContainer"
                        TargetType="ContentView" />

                    <Style
                        ApplyToDerivedTypes="True"
                        Class="DayFrame"
                        TargetType="Frame">
                        <Setter Property="CornerRadius" Value="10" />
                        <Setter Property="HasShadow" Value="False" />
                        <Setter Property="HeightRequest" Value="46" />
                        <Setter Property="WidthRequest" Value="36" />
                        <Setter Property="HorizontalOptions" Value="Center" />
                        <Setter Property="VerticalOptions" Value="Center" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0,5,0,5" />

                        <Setter Property="VisualStateManager.VisualStateGroups">
                            <VisualStateGroupList>
                                <VisualStateGroup>
                                    <VisualState x:Name="IsToday">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#FFB51B" />
                                        </VisualState.Setters>
                                    </VisualState>

                                    <VisualState x:Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#D9D6E9" />
                                        </VisualState.Setters>
                                    </VisualState>

                                    <VisualState x:Name="UnSelected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="Transparent" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </Setter>
                    </Style>

                    <Style Class="DayLayout" TargetType="FlexLayout">
                        <Setter Property="Direction" Value="Row" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalOptions" Value="Center" />
                        <Setter Property="JustifyContent" Value="Center" />
                        <Setter Property="AlignItems" Value="Center" />
                    </Style>

                    <Style Class="DayElement" TargetType="Label">
                        <Setter Property="FontSize" Value="Body" />
                        <Setter Property="TextColor" Value="Black" />
                        <Setter Property="Margin" Value="4,0,4,0" />
                        <Setter Property="HorizontalTextAlignment" Value="Center" />
                        <Setter Property="VerticalTextAlignment" Value="Center" />
                    </Style>

                    <Style Class="HasEventsElement" TargetType="BoxView">
                        <Setter Property="FlexLayout.AlignSelf" Value="Center" />
                        <Setter Property="Margin" Value="0,0,0,8" />
                        <Setter Property="BackgroundColor" Value="#549387" />
                        <Setter Property="CornerRadius" Value="2" />
                        <Setter Property="HeightRequest" Value="4" />
                        <Setter Property="HorizontalOptions" Value="Center" />
                        <Setter Property="VerticalOptions" Value="Center" />
                        <Setter Property="WidthRequest" Value="4" />
                    </Style>

                    <Style Class="CalendarLineSeparator" TargetType="BoxView">
                        <Setter Property="BackgroundColor" Value="#F5F4F9" />
                        <Setter Property="HeightRequest" Value="1" />
                    </Style>

                    <Style Class="CalendarMargin" TargetType="FlexLayout">
                        <Setter Property="Margin" Value="20,0" />
                    </Style>

                    <Style Class="CalendarMargin" TargetType="Grid">
                        <Setter Property="Margin" Value="20,0" />
                    </Style>

                    <Style Class="CalendarDaysContainer" TargetType="Grid">
                        <Setter Property="ColumnSpacing" Value="0" />
                        <Setter Property="RowSpacing" Value="0" />
                    </Style>
                </ResourceDictionary>

                <!--<xal:Planning />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>
            <xal:CalendarView
                DaySelected="OnDaySelected"
                Events="{Binding Events}"
                FirstDayOfWeek="Monday"
                MonthChanged="OnMonthChanged" />

            <!--
            <FlexLayout
                Margin="0,0"
                AlignItems="Center"
                Wrap="Wrap">
                <ContentView
                    Margin="5,0"
                    BackgroundColor="Gray"
                    FlexLayout.Basis="14.28%">
                    <Frame
                        Padding="0"
                        BackgroundColor="#FFB51B"
                        CornerRadius="10"
                        HasShadow="False"
                        HeightRequest="46"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="36">
                        <FlexLayout
                            AlignItems="Center"
                            Direction="Row"
                            JustifyContent="Center">
                            <Label
                                Margin="4,0"
                                HorizontalTextAlignment="Center"
                                Text="10" />
                        </FlexLayout>
                    </Frame>
                </ContentView>
            </FlexLayout>
            -->

            <ListView
                Footer=""
                HeightRequest="140"
                IsVisible="{Binding EventsOfDay.Count, Converter={StaticResource IntToBooleanConverter}}"
                ItemsSource="{Binding EventsOfDay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button
                Margin="20,0"
                BackgroundColor="DodgerBlue"
                Clicked="OnRandomButtonClick"
                Text="Add random event"
                TextColor="White" />

            <Button
                Margin="20,0"
                BackgroundColor="Red"
                Clicked="OnRemoveButtonClick"
                Text="Remove event"
                TextColor="White" />

            <Button
                Margin="20,0"
                BackgroundColor="Indigo"
                Command="{Binding RemoveAllEventsCommand}"
                Text="Remove all events"
                TextColor="White" />

            <Button
                Margin="20,0"
                BackgroundColor="Goldenrod"
                Command="{Binding ReplaceEventCommand}"
                Text="Replace event"
                TextColor="White" />
        </StackLayout>
    </ScrollView>
</ContentPage>
