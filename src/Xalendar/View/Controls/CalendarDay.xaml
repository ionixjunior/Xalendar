<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Xalendar.View.Controls.CalendarDay"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="DayContainer">

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnDaySelected" />
    </ContentView.GestureRecognizers>

    <Frame x:Name="DayFrame" StyleClass="CalendarDay">
        <FlexLayout StyleClass="CalendarDayLayout">
            <Label x:Name="DayElement" StyleClass="CalendarDayNumber" />
            <BoxView x:Name="HasEventsElement" StyleClass="CalendarDayEvent" />
        </FlexLayout>
    </Frame>
</ContentView>